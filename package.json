{
  "name": "finance-dashboard-api",
  "version": "1.0.0",
  "description": "API REST para plataforma SaaS de control de gastos e ingresos",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node src/index.js",
    "dev:watch": "node --watch src/index.js",
    "start:bg": "nohup node src/index.js > server.log 2>&1 &",
    "stop": "pkill -f 'node src/index.js' || true",
    "restart": "npm run stop && sleep 1 && npm run start:bg",
    "logs": "tail -f server.log"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "@supabase/supabase-js": "^2.39.0",
    "stripe": "^14.10.0",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
